{
  "$schema": "https://biomejs.dev/schemas/2.2.5/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": false
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "includes": ["**/*.ts", "**/*.json*", "!**/*.d.ts", "!.wrangler"]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    },
    "includes": ["**/*.ts", "**/*.json*", "!**/*.d.ts", "!.wrangler"]
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double"
    }
  },
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    },
    "includes": ["**/*.ts", "**/*.json*", "!**/*.d.ts", "!.wrangler"]
  }
}
